import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        String word = "misia";
        Scanner scanner = new Scanner(System.in);
        System.out.println();
        System.out.println("Write a single letter:");
        int life = 5;
        int systemLife = 0;
        char letter = scanner.next().charAt(0);
        char[] tab= {'m', 'i', 's', 'i', 'a'};
        int whereIsThisLetterInWord;


        for (int i=0;i<word.length();i++){
            whereIsThisLetterInWord = word.indexOf(letter, i);
//            System.out.println("to jest i " + i);
//            System.out.println("to gdzie znajuje się ta litera " + whereIsThisLetterInWord);

            if (whereIsThisLetterInWord==i){
                tab[i]=letter;
                systemLife = systemLife +1;
//                System.out.println(letter);

            }
            else {
                tab[i]= 'x';
//                System.out.println("X");
            }


//            System.out.println(whereIsThisLetterInWord);
        }
        if (systemLife==0){
            life = (life-1);
            System.out.println("STRACIŁAŚ ŻYĆKO, MASZ JESZCZE " + life+ " ŻYCIEK");
        }
        else {
            systemLife=0;

        }
        System.out.println(tab);

                do {
        System.out.println("Write a single letter:");
        char letter2 = scanner.next().charAt(0);

        for (int i=0;i<word.length();i++){
            whereIsThisLetterInWord = word.indexOf(letter2, i);

//            System.out.println("to jest i " + i);
//            System.out.println("to gdzie znajuje się ta litera " + whereIsThisLetterInWord);

            if (whereIsThisLetterInWord==i){
                tab[i]=letter2;
                systemLife = systemLife +1;
//                System.out.println(letter);

            }

//            System.out.println(whereIsThisLetterInWord);
        }
            if (systemLife==0){
                life = (life-1);

                if (life==0){
                    System.out.println("GAME OVER");
                    return;
                }
                else {
                    System.out.println("STRACIŁAŚ ŻYĆKO, MASZ JESZCZE " + life+ " ŻYCIEK");
                }
            }
            else {
                systemLife=0;
                System.out.println(tab);
                System.out.println(systemLife);

            }
        }
        while (true);








    }

    }
